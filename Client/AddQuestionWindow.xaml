<Window x:Class="Client.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="AddQuestionWindow" Height="300" Width="300" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="10">
        <StackPanel Margin="20">
            <Label Content="AddQuestion" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator/>
            <Label Content="Question" Foreground="White"/>
            <TextBox x:Name="QuestionTextBox" Background="#545d6a" Foreground="White" FontSize="18" AcceptsReturn="True"/>
            <Label Content="Modifier" Foreground="White"/>
            <TextBox x:Name="ModifierTextBox" Background="#545d6a" Foreground="White" FontSize="18" AcceptsReturn="True"/>
            <Button x:Name="AddButton" Click="AddButton_Click" Content="Add" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
